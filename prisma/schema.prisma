generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model UsuarioTienda {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  nombre   String
  rol      String   @default("CLIENTE")
  compras  Pedido[]

  @@map("usuarios_tienda")
}

model Producto {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String?
  precio      Int
  stock       Int      @default(0)
  categoria   String
  imagenUrl   String?
  createdAt   DateTime @default(now())

  @@map("productos_tienda")
}

model Pedido {
  id        Int           @id @default(autoincrement())
  fecha     DateTime      @default(now())
  usuarioId Int
  total     Int
  usuario   UsuarioTienda @relation(fields: [usuarioId], references: [id])
}
